<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/AnswerViewMode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/whiteTextColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingRight="4dp">

                    <ImageButton
                        android:id="@+id/bt_close"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_close" />

                    <TextView
                        android:id="@+id/questinedBy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_weight="6"
                        android:maxLines="1"
                        android:textColor="@android:color/white"
                        android:textSize="24sp" />


                </LinearLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/bookmark"
                    android:layout_alignRight="@+id/bookmark"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:drawableLeft="@drawable/ic_calendar"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text="Pickup Date"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/pickUPdate"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="2016545445"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:drawableLeft="@drawable/ic_pin"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text="Source"

                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/Source"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="2016545445"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:drawableLeft="@drawable/ic_local"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text="Pickup address"

                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/pickuplocation"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="2016545445"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:drawableLeft="@drawable/ic_destination_pin"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text="Destination Address"

                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/destination"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="2016545445"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:drawableLeft="@drawable/ic_local"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text="Drop Address"

                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/dropLocation"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="2016545445"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:drawableLeft="@drawable/ic_profile"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text="Consumer Name"

                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/customerNo"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="2016545445"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:drawableLeft="@drawable/ic_parcel"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text="Goods Type"

                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/goodsType"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="2016545445"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:drawableLeft="@drawable/ic_truck"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text="Truck Type"

                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/truckType"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="2016545445"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:drawableLeft="@drawable/ic_charges"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text="Rate"

                            android:textSize="13sp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="center_vertical">

                            <EditText
                                android:id="@+id/rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:fontFamily="@font/gotham"
                                android:hint="00.0"
                                android:inputType="phone"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:drawablePadding="5dp"
                                android:gravity="center_vertical"
                                android:text="unit"
                                android:textSize="13sp" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:drawableLeft="@drawable/ic_truck"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text="Number Of Truck"

                            android:textSize="13sp" />

                        <EditText
                            android:id="@+id/noofTruck"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_weight="5"
                            android:background="@null"
                            android:fontFamily="@font/gotham"
                            android:hint="00.0"
                            android:inputType="phone"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:drawableLeft="@drawable/ic_bill"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text="Expense"

                            android:textSize="13sp" />


                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/expense"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2016545445"
                                android:textSize="13sp" />

                            <ImageButton
                                android:id="@+id/addExpense"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:gravity="center_vertical"
                                android:src="@drawable/ic_baseline_add_24"
                                android:text="unit" />

                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:hint="Select CheckList"
                        app:hintEnabled="true">

                        <AutoCompleteTextView
                            android:id="@+id/checkList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:gravity="start"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:hint="Select Motor Owner"
                        app:hintEnabled="true">

                        <AutoCompleteTextView
                            android:id="@+id/myMotorOwner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:gravity="start"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/gotham"
                        android:text="Share"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


        </LinearLayout>


    </LinearLayout>
</layout>
