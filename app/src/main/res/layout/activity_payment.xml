<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.ActivityPayment">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/advancePayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/whiteTextColor"
            app:rippleColor="@color/grey_20">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/reports_header_bk"
                    android:padding="8dp"
                    android:src="@drawable/ic_loan"
                    app:tint="@color/whiteTextColor" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/img1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/reportContentText"
                        android:text="Advance"
                        android:textColor="#333" />

                </LinearLayout>


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/whiteTextColor"
            app:rippleColor="@color/grey_20">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/reports_header_bk"
                    android:padding="8dp"
                    android:src="@drawable/ic_add_payee"
                    app:tint="@color/whiteTextColor" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/img2"
                    android:orientation="vertical">

                    <TextView
                        style="@style/reportContentText"
                        android:text="Add Payee"
                        android:textColor="#333" />

                </LinearLayout>


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/whiteTextColor"
            app:rippleColor="@color/grey_20">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/reports_header_bk"
                    android:padding="8dp"
                    android:src="@drawable/ic_bill_new"
                    app:tint="@color/whiteTextColor" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/img3"
                    android:orientation="vertical">

                    <TextView
                        style="@style/reportContentText"
                        android:text="Bills"
                        android:textColor="#333" />


                </LinearLayout>


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</layout>
